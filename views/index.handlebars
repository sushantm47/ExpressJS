<h1 class="text-center mb-3">{{title}}</h1>
<hr>
<h2>Add Members</h2>
<form action="/api/members" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control">
    </div>
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<hr>
<h4 class="mt-3">Members</h4>
<ul class="list-group mt-3">
    {{#each members}}
    <li class="list-group-item"><span class="font-weight-bold">{{this.name}}</span> : {{this.email}}</li>
    {{/each}}
</ul>